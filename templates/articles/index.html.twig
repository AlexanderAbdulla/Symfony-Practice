{% extends 'base.html.twig' %}

{% block title %} SymphArt Articles{% endblock %}

{% block body %}

    {% if articles %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th> Article Title </th>
                    <th> Actions </th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                <td>
                    <a href="/article/1" class="btn btn-dark"> Show </a>
                </td>
                {% endfor %}
            </tbody>
        </table>
        
    {% else %}

    {% endif %}

{% endblock %}